<h1> Reservations </h1>
<%
=begin%>
 <ul>
    <% @reservations.each do |r| %>
        <li>
            <%= r.user.id %> <%= r.date_d %> <%= r.type_c %>
            <%= link_to 'Voir', reservation_path(r) %>
        </li>        
    <% end %>
</ul> 
<%
=end%>


<div>
  <table>
    <tr>
      <th>User</th>
      <th>Type de Chambre</th>
      <th>Date Debut</th>
      <th>Date Fin</th>
      <th> Voir </th>
      <th> Modifier </th>
    </tr>
    <% @reservations.each do |reservation|%>
      <tr>
        <td> <%= reservation.user.email %></td>
        <td> <%= reservation.type_c %> </td>
        <td><%= reservation.date_d %></td>
        <td><%= reservation.date_f%></td>
        <td> <%= link_to "show", reservation %> </td>
        <td> <%= link_to "edit", edit_reservation_path(reservation) if reservation.date_d > Date.today %> </td>
      </tr>  
    <%end%>
  </table>
</div>
